{% extends 'base.html.twig' %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Debut</th>
                <th>Fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        
        {% for ct in cts %}
        
            <tr>
                <td>{{ ct.debut ? ct.debut|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ ct.fin ? ct.fin|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                
                    {% if ct.cteffectue == 1 %}
                    <a href="{{ path('app_ct_show', {'id': ct.id}) }}">Effectué</a>
                    {% endif %}

                    {% if ct.cteffectue == 0 %}
                    <a href="{{ path('app_ct_show', {'id': ct.id}) }}">Non effectué</a>
                    {% endif %}

                </td>
            </tr>
               
        {% endfor %}
        
        </tbody>
    </table>

{% endblock %}