{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ client.firstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_CLIENT') %}
    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a></br>
    {% endif %}

    {% if is_granted('ROLE_TECHNICIEN') %}
     <a href="{{ path('app_client_index') }}">Retour Ã  la liste</a>
    {% endif %}
    
{% if is_granted('ROLE_ADMIN') %}
    {{ include('client/_delete_form.html.twig') }}
{% endif %}

{% endblock %}
